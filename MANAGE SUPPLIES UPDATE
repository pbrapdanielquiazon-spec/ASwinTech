  <!-- Logic -->
  <script type="module">
  import { authApi, suppliesApi, getToken, clearToken } from "/_shared/api.js";

  /* ===== Small DOM helpers ===== */
  const $ = (id) => document.getElementById(id);
  const on = (id, evt, handler) => { const el = $(id); if (el) el.addEventListener(evt, handler); };

  function showView(v){
    document.querySelectorAll(".record-view").forEach(s=>s.classList.remove("active"));
    $(v)?.classList.add("active"); 
    document.querySelectorAll(".tab-btn").forEach(b=>b.classList.remove("active"));
    document.querySelector(`.tab-btn[onclick="showView('${v}')"]`)?.classList.add("active");
  }
  function _openModalRaw(id){ $(id) && ($(id).style.display="block"); }
  function openModal(id){
    _openModalRaw(id);
    if (id === "addSupplyModal"){
      attachGuard("supplyCategory","supplyUnit",{usePlaceholderOnChange:true});
    }
    if (id === "editSupplyModal"){
      attachGuard("editSupplyCategory","editSupplyUnit",{usePlaceholderOnChange:true});
      enforceEditLegacyUnit();
    }
  }
  function closeModal(id){ $(id) && ($(id).style.display="none"); }
  function success(msg="Saved!"){ $("successMsg").innerText = "‚úÖ " + msg; _openModalRaw("successModal"); }
  function fail(msg="Something went wrong"){ $("errorMsg").innerText = "‚ùå " + msg; _openModalRaw("errorModal"); }
  function escapeHtml(s){ return (""+s).replaceAll("&","&amp;").replaceAll("<","&lt;").replaceAll(">","&gt;"); }

  /* ===== ENUMS ===== */
  const CATEGORY_ENUM = new Set(["feed","medicine","vaccine","tool","other"]);
  const UNIT_ENUM = new Set(["kg","pc","bottle","pack","sack","bag","vial","sachet"]);

  /* ===== Overview thresholds & helpers ===== */
  const FEED_THRESHOLDS_KG = { prestarter:100, starter:150, grower:200, finisher:200 };
  const HEALTH_UNITS_ORDER = ["bottle","vial","pack","sachet","bag","sack","pc","kg"];
  const PER_UNIT_THRESHOLDS = { bottle:10, vial:20, pack:10, sachet:50, bag:5, sack:5, pc:10, kg:10 };

  function detectStage(itemNameRaw){
    const s = String(itemNameRaw || "").toLowerCase();
    if (/\bpre[\s-]?starter\b/.test(s)) return "prestarter";
    if (/\bstarter\b/.test(s))         return "starter";
    if (/\bgrower\b/.test(s))          return "grower";
    if (/\bfinisher\b/.test(s))        return "finisher";
    return null;
  }

  function fmtLocal(iso){
    if (!iso) return "";
    const d = new Date(iso);
    const pad = n => String(n).padStart(2,"0");
    return `${d.getFullYear()}-${pad(d.getMonth()+1)}-${pad(d.getDate())} ${pad(d.getHours())}:${pad(d.getMinutes())}:${pad(d.getSeconds())}`;
  }

  function normalizeSupply(s, me){
    const id = Number(s.supply_id ?? s.id ?? 0);
    return {
      id,
      item_name: s.item_name ?? s.name ?? "",
      category:  (s.category ?? "").toString(),
      quantity:  Number(s.quantity ?? 0),
      unit:      (s.unit ?? "").toString(),
      updated_at: s.updated_at ?? s.created_at ?? "",
      updated_by: s.updated_by ?? null,
      updated_by_name: (s.updated_by != null && me && Number(s.updated_by) === Number(me.user_id))
        ? (me.name ?? me.full_name ?? me.username ?? me.email ?? `#${s.updated_by}`)
        : (s.updated_by != null ? `#${s.updated_by}` : "-"),
    };
  }

  /* ===== Supplies Overview computation ===== */
  function computeOverviewTotals() {
    const byCat = { medicine:new Map(), vaccine:new Map(), tool:new Map(), other:new Map() };
    const feedStages = { prestarter: 0, starter: 0, grower: 0, finisher: 0 };

    for (const r of suppliesAll) {
      const cat = String(r.category || "").toLowerCase();
      const unit = String(r.unit || "").toLowerCase() || "pc";
      const qty  = Number(r.quantity || 0);

      if (cat === "feed") {
        const stage = detectStage(r.item_name || r.name);
        if (stage) feedStages[stage] += qty;
      } else if (byCat[cat]) {
        byCat[cat].set(unit, (byCat[cat].get(unit) || 0) + qty);
      } else {
        byCat.other.set(unit, (byCat.other.get(unit) || 0) + qty);
      }
    }
    return { byCat, feedStages };
  }

  function chipHtml(label, val, unit, levelClass, titleText){
    return `<span class="health-chip ${levelClass}" title="${titleText}">${label}: <span class="val">${val.toLocaleString()}</span> <span class="unit">${unit}</span></span>`;
  }
  function stageChip(label, kg, thr){
    let cls="ok", title=`${label} healthy level`;
    if (kg <= Math.max(thr*0.5,1)) { cls="low";  title = `${label} low (‚â§ ${Math.round(thr*0.5)} kg)`; }
    else if (kg <= thr)            { cls="warn"; title = `${label} nearing low (‚â§ ${thr} kg)`; }
    return chipHtml(label, kg, "kg", cls, title);
  }

  function renderUnitGroup(hostId, unitMap, groupLabel){
    const host = $(hostId);
    if (!host) return;

    const entries = Array.from(unitMap.entries());
    entries.sort((a,b)=>{
      const ia = HEALTH_UNITS_ORDER.indexOf(a[0]);
      const ib = HEALTH_UNITS_ORDER.indexOf(b[0]);
      if (ia !== -1 && ib !== -1) return ia - ib;
      if (ia !== -1) return -1;
      if (ib !== -1) return 1;
      return a[0].localeCompare(b[0]);
    });

    const html = entries.map(([unit, sum])=>{
      const thr = PER_UNIT_THRESHOLDS[unit] ?? 10;
      let cls="ok", title=`${groupLabel} healthy level`;
      if (sum <= Math.max(thr*0.5,1)) { cls="low";  title = `${groupLabel} low (‚â§ ${Math.round(thr*0.5)} ${unit})`; }
      else if (sum <= thr)            { cls="warn"; title = `${groupLabel} nearing low (‚â§ ${thr} ${unit})`; }
      return chipHtml(`${groupLabel} ${unit}`, sum, unit, cls, title);
    }).join(" ");

    host.innerHTML = html || `<span class="health-chip" title="No items">No ${groupLabel.toLowerCase()} recorded</span>`;
  }

  function renderSuppliesOverview(){
    const filter = ($("overviewFilter")?.value || "all").toLowerCase();
    const { byCat, feedStages } = computeOverviewTotals();

    const showFeed = (filter === "all" || filter === "feed");
    const showMed  = (filter === "all" || filter === "medicine");
    const showVac  = (filter === "all" || filter === "vaccine");
    const showTool = (filter === "all" || filter === "tool");
    const showOth  = (filter === "all" || filter === "other");

    $("feedStageRow").style.display = showFeed ? "" : "none";
    $("medicineRow").style.display  = showMed  ? "" : "none";
    $("vaccineRow").style.display   = showVac  ? "" : "none";
    $("toolRow").style.display      = showTool ? "" : "none";
    $("otherRow").style.display     = showOth  ? "" : "none";

    if (showFeed) {
      const s = feedStages;
      $("stageChips").innerHTML = [
        stageChip("Pre-starter", s.prestarter, FEED_THRESHOLDS_KG.prestarter),
        stageChip("Starter",     s.starter,    FEED_THRESHOLDS_KG.starter),
        stageChip("Grower",      s.grower,     FEED_THRESHOLDS_KG.grower),
        stageChip("Finisher",    s.finisher,   FEED_THRESHOLDS_KG.finisher),
      ].join(" ");
    }

    renderUnitGroup("medicineChips", byCat.medicine, "Medicine");
    renderUnitGroup("vaccineChips",  byCat.vaccine,  "Vaccine");
    renderUnitGroup("toolChips",     byCat.tool,     "Tool");
    renderUnitGroup("otherChips",    byCat.other,    "Other");
  }

  /* ===== Unit guard in Add/Edit modals ===== */
  const GUARD_UNITS = {
    feed:     ["kg","sack"],
    medicine: ["bottle","vial","sachet","pack"],
    vaccine:  ["bottle","vial"],
    tool:     ["pc"],
    other:    Array.from(UNIT_ENUM)
  };

  function isUnitAllowed(category, unit){
    const allowed = GUARD_UNITS[category] || GUARD_UNITS.other;
    return allowed.includes(unit);
  }

  function repopulateUnitSelect(selectEl, allowed, {placeholder = null, keepIfAllowed = true} = {}){
    if (!selectEl) return;
    const current = (selectEl.value || "").toLowerCase();

    const opts = [];
    if (placeholder){
      opts.push(`<option value="" disabled selected>${placeholder}</option>`);
    }
    for (const u of allowed){ opts.push(`<option value="${u}">${u}</option>`); }
    selectEl.innerHTML = opts.join("");

    if (keepIfAllowed && current && allowed.includes(current)){
      selectEl.value = current;
    } else if (!placeholder) {
      selectEl.value = allowed[0] ?? "";
    } else {
      selectEl.value = "";
    }
  }

  function attachGuard(catSelectId, unitSelectId, {usePlaceholderOnChange = true} = {}){
    const catEl = $(catSelectId);
    const unitEl = $(unitSelectId);
    if (!catEl || !unitEl) return;

    // avoid duplicate listeners across repeated modal opens
    if (catEl.dataset.guardAttached === "1") {
      const cat = (catEl.value || "").toLowerCase();
      repopulateUnitSelect(unitEl, GUARD_UNITS[cat] || GUARD_UNITS.other, { placeholder: null, keepIfAllowed: true });
      return;
    }

    const applyInitial = () => {
      const cat = (catEl.value || "").toLowerCase();
      repopulateUnitSelect(unitEl, GUARD_UNITS[cat] || GUARD_UNITS.other, { placeholder: null, keepIfAllowed: true });
    };

    const onChange = () => {
      const cat = (catEl.value || "").toLowerCase();
      repopulateUnitSelect(
        unitEl,
        GUARD_UNITS[cat] || GUARD_UNITS.other,
        { placeholder: usePlaceholderOnChange ? "Select unit" : null, keepIfAllowed: false }
      );
    };

    catEl.addEventListener("change", onChange);
    catEl.dataset.guardAttached = "1";
    applyInitial();
  }

  function enforceEditLegacyUnit(){
    const cat = ($("editSupplyCategory")?.value || "").toLowerCase();
    const unit = ($("editSupplyUnit")?.value || "").toLowerCase();
    const allowed = GUARD_UNITS[cat] || GUARD_UNITS.other;
    if ($("editSupplyUnit") && !allowed.includes(unit)){
      repopulateUnitSelect($("editSupplyUnit"), allowed, { placeholder: null, keepIfAllowed: false });
    }
  }

  /* ===== Data + rendering ===== */
  let suppliesAll = [];
  let me = null;
  let archiveTarget = null;

  function trForSupply(s){
    const n = normalizeSupply(s, me);
    const tr = document.createElement("tr");
    tr.dataset.id = n.id;
    tr.innerHTML = `
      <td>${n.id}</td>
      <td>${escapeHtml(n.item_name)}</td>
      <td>${escapeHtml(n.category)}</td>
      <td>${Number(n.quantity)}</td>
      <td>${escapeHtml(n.unit)}</td>
      <td>${fmtLocal(n.updated_at)}</td>
      <td>${escapeHtml(n.updated_by_name)}</td>
      <td>
        <button class="btn-qty"    data-id="${n.id}">Adjust Qty</button>
        <button class="btn-edit"   data-id="${n.id}">Edit</button>
        <button class="btn-archive" data-id="${n.id}">Archive</button>
      </td>`;
    tr.querySelector(".btn-edit").onclick = () => openEditModalFromRow(tr);
    tr.querySelector(".btn-archive").onclick = () => { archiveTarget = tr; openModal("archiveModal"); };
    tr.querySelector(".btn-qty").onclick = () => openQtyModal(tr);
    return tr;
  }

  async function reloadSupplies(){
    try{
      const raw = await suppliesApi.list();
      suppliesAll = Array.isArray(raw) ? raw : (raw?.items ?? raw?.data ?? []);
      renderSupplies();
      recomputeTotalsAfterRender();
    }catch(e){ fail(asMessage(e) || "Failed to load supplies"); }
  }

  function renderSupplies(){
    let rows = suppliesAll.slice();
    const q = ($("searchName")?.value || "").trim().toLowerCase();
    if (q) rows = rows.filter(s => (s.item_name ?? s.name ?? "").toLowerCase().includes(q));
    const sort = $("sortCategory")?.value || "";
    if (sort === "asc" || sort === "desc") {
      const dir = sort === "asc" ? 1 : -1;
      rows.sort((a,b)=>{
        const ca = (a.category ?? "").toLowerCase();
        const cb = (b.category ?? "").toLowerCase();
        if (ca < cb) return -1 * dir;
        if (ca > cb) return  1 * dir;
        return 0;
      });
    }
    const tbody = $("supplyTable");
    if (!tbody) return;
    tbody.innerHTML = "";
    rows.forEach(s => tbody.appendChild(trForSupply(s)));
  }

  /* ===== Event bindings (SAFE) ===== */
  on("searchName","input", renderSupplies);
  on("sortCategory","change", renderSupplies);
  on("overviewFilter","change", renderSuppliesOverview);

  on("addSupplyForm","submit", async (e)=>{
    e.preventDefault();
    const body = {
      item_name: $("supplyName").value.trim(),
      category: $("supplyCategory").value.trim().toLowerCase(),
      quantity: Number($("supplyQuantity").value),
      unit: $("supplyUnit").value.trim().toLowerCase(),
    };
    if (!Number.isInteger(body.quantity) || body.quantity < 0) return fail("Quantity must be an integer ‚â• 0");
    if (!CATEGORY_ENUM.has(body.category)) return fail("Category must be one of: feed, medicine, vaccine, tool, other");
    if (!UNIT_ENUM.has(body.unit)) return fail("Unit must be one of: kg, pc, bottle, pack, sack, bag, vial, sachet");
    if (!isUnitAllowed(body.category, body.unit)) return fail("Selected unit is not allowed for this category");
    if(!body.item_name) return fail("Please fill all fields correctly");

    try{
      await suppliesApi.create(body);
      $("addSupplyForm").reset();
      closeModal("addSupplyModal");
      success("Supply added");
      await reloadSupplies();
    }catch(e){ fail(asMessage(e) || "Create failed"); }
  });

  function capitalizeFirst(s){ return s ? s.charAt(0).toUpperCase() + s.slice(1) : s; }
  function openEditModalFromRow(tr){
    const cells = tr.cells;
    $("editSupplyId").value       = tr.dataset.id;
    $("editSupplyName").value     = cells[1].innerText;
    $("editSupplyCategory").value = capitalizeFirst(cells[2].innerText.toLowerCase());
    $("editSupplyQuantity").value = cells[3].innerText;
    $("editSupplyUnit").value     = cells[4].innerText.toLowerCase();
    openModal("editSupplyModal");
  }

  on("editSupplyForm","submit", async (e)=>{
    e.preventDefault();
    const id = $("editSupplyId").value;
    const body = {
      item_name: $("editSupplyName").value.trim(),
      category: $("editSupplyCategory").value.trim().toLowerCase(),
      quantity: Number.parseInt($("editSupplyQuantity").value,10),
      unit: $("editSupplyUnit").value.trim().toLowerCase(),
    };
    if(!id) return fail("Missing id");
    if (!Number.isInteger(body.quantity) || body.quantity < 0) return fail("Quantity must be an integer ‚â• 0");
    if (!CATEGORY_ENUM.has(body.category)) return fail("Category must be one of: feed, medicine, vaccine, tool, other");
    if (!UNIT_ENUM.has(body.unit)) return fail("Unit must be one of: kg, pc, bottle, pack, sack, bag, vial, sachet");
    if (!isUnitAllowed(body.category, body.unit)) return fail("Selected unit is not allowed for this category");
    if(!body.item_name) return fail("Please fill all fields correctly");

    try{
      await suppliesApi.update(id, body);
      closeModal("editSupplyModal");
      success("Supply updated");
      await reloadSupplies();
    }catch(e){ fail(asMessage(e) || "Update failed"); }
  });

  function openQtyModal(tr){
    $("qtySupplyId").value = tr.dataset.id;
    $("qtyDelta").value = "";
    _openModalRaw("qtyModal");
  }
  on("qtyForm","submit", async (e)=>{
    e.preventDefault();
    const id = $("qtySupplyId").value;
    const delta = Number.parseInt($("qtyDelta").value, 10);
    if(!id || !Number.isInteger(delta) || delta === 0){ return fail("Enter a non-zero integer"); }
    try{
      await suppliesApi.adjustQty(id, delta);
      closeModal("qtyModal");
      success("Quantity adjusted");
      await reloadSupplies();
    }catch(e){
      const msg = asMessage(e);
      if (/negative|insufficient|below/i.test(msg)) return fail("Adjustment rejected: would result in negative inventory");
      fail(msg || "Adjust failed");
    }
  });

  $("archiveYesBtn")?.addEventListener("click", ()=>{
    if(!archiveTarget) return closeModal("archiveModal");
    const clone = archiveTarget.cloneNode(true);
    const actions = clone.querySelector("td:last-child");
    actions.innerHTML = `<button class="btn-restore">Restore</button>`;
    actions.querySelector(".btn-restore").onclick = ()=>{
      const back = clone.cloneNode(true);
      const id = clone.dataset.id;
      const last = back.querySelector("td:last-child");
      last.innerHTML = `
        <button class="btn-qty" data-id="${id}">Adjust Qty</button>
        <button class="btn-edit" data-id="${id}">Edit</button>
        <button class="btn-archive" data-id="${id}">Archive</button>`;
      back.querySelector(".btn-edit").onclick = () => openEditModalFromRow(back);
      back.querySelector(".btn-archive").onclick = () => { archiveTarget = back; openModal("archiveModal"); };
      back.querySelector(".btn-qty").onclick = () => openQtyModal(back);
      $("supplyTable").appendChild(back);
      clone.remove();
      recomputeTotalsAfterRender();
    };
    $("archivedSupply").appendChild(clone);
    archiveTarget.remove();
    archiveTarget = null;
    closeModal("archiveModal");
    success("Archived (local only)");
    recomputeTotalsAfterRender();
  });

  function asMessage(err){
    if (!err) return "Unknown error";
    if (typeof err === "string") return err;
    if (err.error && err.error.message) return err.error.message;
    if (err.detail && typeof err.detail === "string") return err.detail;
    try { return JSON.parse(err.message)?.error?.message || err.message; } catch { return err.message || "Error"; }
  }

  function recomputeTotalsAfterRender(){ renderSuppliesOverview(); }

  async function init(){
    if(!getToken()){ return (window.location.href = "/Zhomepage/login.html"); }
    try{ me = await authApi.me(); }catch(e){ clearToken(); return (window.location.href = "/Zhomepage/login.html"); }
    await reloadSupplies();
  }

  // Ensure DOM is built before any binding
  window.addEventListener("DOMContentLoaded", init);

  // Dismiss modals by clicking backdrop
  window.addEventListener("click",(e)=>{
    document.querySelectorAll(".modal").forEach(m => { if(e.target === m) m.style.display = "none"; });
  });

  // Logout
  on("logoutLink","click", (e) => {
    e.preventDefault();
    clearToken();
    window.location.href = "/Zhomepage/login.html";
  });

  // expose minimal API for inline handlers
  Object.assign(window, { showView, openModal, closeModal, reloadSupplies });
</script>

</body>
</html>
